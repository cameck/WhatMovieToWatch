<div class="row">
  <div class="col s12 m12">
    <h2>
      <img src="<%= current_user.profile_picture.include?('http:') ? current_user.profile_picture.sub('http','https') : current_user.profile_picture %>"
           alt="<%= current_user.name %>"
           class="circle" />
      <%= current_user.name %>
    </h2>
  </div>
</div>

<%=
  react_component 'ProfileMovieList', {
                                        watchListItems: @watchlist_items,
                                        user_id: current_user.id,
                                        seenMovies: @seen_movies,
                                        fbId: current_user.uid
                                      }
%>
